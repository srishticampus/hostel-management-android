<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kyivtypeserif_bold"
        android:text="Verify Hostel"
        android:textColor="@color/orange"
        android:textFontWeight="800"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dormitory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Enter Your Hostel Verification Id Here"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/hostel_id"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hostel_id_bg"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="@color/white"
        android:text="6787" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_hostel_id"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/white_btn_bg"
        android:gravity="center"
        android:text="SUBMIT"
        android:textFontWeight="800"
        android:textSize="20sp" />

</LinearLayout>