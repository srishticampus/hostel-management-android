<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4FAEBE"
        android:elevation="10dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressTint="@color/background_bg" />
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kyivtypeserif_bold"
        android:text="Settings"
        android:textColor="@color/orange"
        android:textFontWeight="800"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sub_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_head"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Manage your passes and view \n your profile"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/viewProfileTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_heading"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="#716A6A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="View Profile"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/rightArrow"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/outline_arrow_right_alt_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewOutPassTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewProfileTv"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="#716A6A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="View Out Pass"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/rightArroww"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/outline_arrow_right_alt_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewVisitorPassTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewOutPassTv"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="#716A6A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="View Visitor Pass"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/rightArrowww"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/outline_arrow_right_alt_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/messPrefT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewVisitorPassTv"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Mess Preference"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/mess_rad_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messPrefT"
        android:layout_marginHorizontal="24dp"
        android:background="#716A6A"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_btn_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veg"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            app:buttonTint="@color/white"/>

        <RadioButton
            android:id="@+id/radio_btn_non_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non Veg"
            app:buttonTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <RadioButton
            android:id="@+id/radio_btn_no_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:buttonTint="@color/white"
            android:text="no food" />
    </RadioGroup>

</RelativeLayout>